pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS=credentials('dockerCred')
    }

    stages {
        stage('Cloning Git') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'db207370-b223-4f6b-8543-6a6cf0826b3f', url: 'https://github.com/bibek65/Frontend.git']])
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    sh 'docker build -t bibek65/jenkins:frontend .'
                }
            }
        }
        stage('Upload Image') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    sh 'docker push bibek65/jenkins:frontend'
                }
            }
        }
    }
}